{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			"build",
			"tsconfig.json",
			"tsconfig.*.json",
			".react-router/*",
			"react-router.config.ts",
			"vite-env.d.ts",
			"public/**/*"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsole": {
					"level": "error",
					"options": {
						"allow": ["error"]
					}
				},
				"noEvolvingTypes": "info"
			},
			"correctness": {
				"noUnusedImports": "error"
			},
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false,
						"requireAscii": true,
						"filenameCases": ["PascalCase", "camelCase", "export"]
					}
				}
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},
	"overrides": [
		{
			"include": [
				"test/**/*",
				"**/*.test.{ts,tsx,js,jsx}",
				"**/*.spec.{ts,tsx,js,jsx}",
				"src/app/routes/*"
			],
			"linter": {
				"rules": {
					"style": {
						"useFilenamingConvention": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"css": {
		"parser": {
			"cssModules": true
		},
		"formatter": {
			"indentStyle": "tab"
		},
		"linter": {
			"enabled": true
		}
	}
}
